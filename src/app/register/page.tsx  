import { useState } from 'react';
import { useRouter } from 'next/navigation';
export default function Register() {
  const [f, setF] = useState({ username: '', password: '' });
  const r = useRouter();
  return (
    <form
      onSubmit={async e => {
        e.preventDefault();
        const res = await fetch('/api/auth/register', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(f),
        });
        if (res.ok) r.push('/login');
        else alert('Failed');
      }}
      className="flex flex-col gap-2 max-w-sm mx-auto"
    >
      <input className="border p-2" placeholder="Username" value={f.username} onChange={e => setF({ ...f, username: e.target.value })} />
      <input className="border p-2" type="password" placeholder="Password" value={f.password} onChange={e => setF({ ...f, password: e.target.value })} />
      <button className="bg-blue-600 text-white p-2">Register</button>
    </form>
  );
}
